{
	"root": true,
	"extends": [
		"wikimedia/client",
		"wikimedia/jquery",
		"wikimedia/mediawiki"
	],
	"parserOptions": {
		"sourceType": "commonjs",
		"ecmaVersion": 2017
	},
	"globals": {
		"blueSpice": "readonly",
		"bs": "readonly",
		"jQuery": "readonly",
		"mediaWiki": "readonly"
	},
	"rules": {
		"es-x/no-array-prototype-includes": "off",
		"es-x/no-async-functions": "off",
		"max-len": "off"
	}
}
